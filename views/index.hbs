<div class="container site-header">
  <div class="inner">
    <div class="header-wrapper">
      <p class="header-text">Marshallz Blog</h1>
      <p class="meta">Welcome! And more importantly, Welcome to Marshallz Blog</p>
    </div>
  </div>
</div>
<div class="blog-posts">
  {{#each posts}}
  {{log author}}
  <div class="container post-item">
    <div class="inner">
      <div class="img-container">
        <img class="img-scale avatar" src='{{author.avatar}}'>
        </div>
      <div class="content-container">
        <p class="title-text"><a href="/posts/{{_id}}/{{slug}}">{{title}}</a></p>
        <p class="meta" data-livestamp="{{ts timestamp}}"></span></p>
        {{#if this.image}}
          <div class="image-container" style="background-image: url('{{image}}')";></div>
        {{/if}}
        <p class="body-text">{{body}}</p>
        <p class="meta sig">by <a href="{{author.social.twitter}}">author.username</a></p>
      </div>
    </div>
  </div>
{{/each}}
</div>
<div class="container pagination">
  <div class="inner">
    <div class="kurt-loader"></div>
    <div id="pagination" data-page={{page}}></div>
  </div>
</div>
<div class="container site-footer">
  <div class="inner">
    <div class="footer-wrapper">
      <p class="meta">2032 &copy; <a href="/">evturn.com</a> &bull; All rights reserved</p>
    </div>
  </div>
</div>