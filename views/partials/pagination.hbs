{{#each posts}}
  <div class="container post-item">
    <div class="inner">
      <div class="img-container">
        <img class="img-scale avatar" src='img/av.png'>
        </div>
      <div class="content-container">
        <p class="title-text"><a href="/posts/{{this._id}}/{{this.slug}}">{{this.title}}</a></p>
        <p class="meta" data-livestamp="{{ts this.timestamp}}"></span></p>
        {{#if this.image}}
          <div class="image-container" style="background-image: url('{{this.image}}')";></div>
        {{/if}}
        <p class="body-text">{{this.body}}</p>
        <p class="meta sig">by <a href="http://twitter.com/marshallzBlog">Marshall</a></p>
      </div>
    </div>
  </div>
{{/each}}