{{#each posts}}
  <div class="container post-item">
    <div class="post-item__avatar">
      <img class="img-scale post-item__avatar-image" src='{{#if author.avatar}}{{author.avatar}}{{else}}img/av.png{{/if}}'>
    </div>
    <div class="post-item__content">
      <div class="post-item__content-title"><a href="/posts/{{_id}}/{{slug}}">{{title}}</a></div>
      <div class="post-item__content-timestamp" data-livestamp="{{ts timestamp}}"></div>
      {{#if this.image}}
        <div class="post-item__content-image" style="background-image: url('{{image}}')";></div>
      {{/if}}
      <div class="post-item__content-body">{{body}}</div>
      <div class="post-item__content-author">by <a href="{{#if author.social}}{{author.social.twitter}}{{else}}http://twitter.com/marshallzBlog{{/if}}">{{#if author.username}}{{author.username}}{{else}}Marshall{{/if}}</a></div>
    </div>
  </div>
{{/each}}